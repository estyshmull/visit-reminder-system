# Database
# Database
DATABASE_URL="mysql://user:password@localhost:3306/visit_reminders"

# Application
# Server
NODE_ENV="development"
PORT=3000

# Frontend URL
# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

# JWT Authentication
# JWT
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Cron Jobs
# Webhook (for production)
SERVER_URL="https://your-domain.com"

# Notification Settings
ENABLE_REMINDERS=true

# SMS/Email (להוספה בעתיד)
# SMS_API_KEY=your_sms_api_key
# SMS_API_URL=https://api.sms-provider.com
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_password
# Yemot HaMashiach API (שירות חיצוני לשיחות/IVR)
YEMOT_PHONE="077XXXXXXX"
YEMOT_PASSWORD="your_password"
YEMOT_API_BASE="https://www.call2all.co.il/ym/api"

