# Backend - Production environment variables
# הערות: קובץ זה הוא דוגמה בלבד — בכל פרודקשן יש להשתמש ב-Secret Manager

# Database connection string
# דוגמה עבור SQL Server:
# sqlserver://<user>:<password>@<host>:1433;database=<db_name>;encrypt=true;trustServerCertificate=true
DATABASE_URL="sqlserver://sa:YourStrong!Passw0rd@db-host.example.com:1433;database=visit_reminders;trustServerCertificate=true"

# JWT settings - החלף לערכים חזקים ומאוחסנים בבטחה
JWT_SECRET="replace_with_secure_random_value"
JWT_EXPIRES_IN="7d"

# Yemot HaMashiach / IVR API credentials (השתמש בסביבה מאובטחת)
YEMOT_PHONE="077XXXXXXX"
YEMOT_PASSWORD="replace_with_secure_password"
YEMOT_API_BASE="https://www.call2all.co.il/ym/api"

# Server
PORT=3000
NODE_ENV="production"

# Frontend origin for CORS
FRONTEND_URL="https://app.your-domain.com"

# Public server url used for webhooks/callbacks
SERVER_URL="https://api.your-domain.com"

# Feature toggles
ENABLE_REMINDERS=true

# Logging
LOG_LEVEL="info"

# Security notes:
# - אל תכניס קבצים עם סודות לתוך ה-repo. השתמש בכלי ניהול סודות (e.g., Azure Key Vault, AWS Secrets Manager).
# - ודא חיבורי DB מוצפנים ועם הרשאות מינימליות.
