# Backend - Development environment variables
# הערות: קובץ זה מיועד לפיתוח מקומי בלבד. אל תשתמשו בו לפרודקשן.

# Database connection string
# לדוגמה עבור MySQL
# פורמט: mysql://user:password@host:port/database
DATABASE_URL="mysql://dev_user:dev_password@127.0.0.1:3306/visit_reminders_dev"

# JWT settings
# מפתח לשימוש בחתימת JWT (בפיתוח ניתן להשתמש בערך דמה)
JWT_SECRET="dev_jwt_secret_change_me"
# תקופת התוקף של ה-token (7d = 7 ימים)
JWT_EXPIRES_IN="7d"

# Yemot HaMashiach / IVR API
YEMOT_PHONE="077XXXXXXX"
YEMOT_PASSWORD="dev_password"
YEMOT_API_BASE="https://sandbox.call2all.co.il/ym/api"

# Server
PORT=3000
NODE_ENV="development"

# Frontend origin - used for CORS during development
FRONTEND_URL="http://localhost:5173"

# Webhook / public URL used by external services in dev (ngrok, localtunnel)
# אם אינך חשוף לפס האינטרנט הציבורי - השאר דומיין מקומי או הוסף הערות על שימוש ב-ngrok
SERVER_URL="http://localhost:3000"

# Feature toggles
# האם לשלוח תזכורות באמת בסביבת פיתוח? (false כברירת מחדל)
ENABLE_REMINDERS=false

# Logging and debug
LOG_LEVEL="debug"

# הערות נוספות:
# - אל תשמר סודות אמיתיים בקוד. השתמש בקבצי סודות או secret manager לפרודקשן.
# - אם יש צורך להתחבר לשירותי צד שלישי אמיתיים, עדכן את הערכים בהתאם.
